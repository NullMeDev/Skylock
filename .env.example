# Skylock Hybrid - Security Configuration Template
# NEVER commit this file with real values - copy to .env and customize

# =============================================================================
# ENCRYPTION SETTINGS (REQUIRED) - Your data is ALWAYS encrypted
# =============================================================================

# Master passphrase for key derivation (NEVER share this)
# SKYLOCK_PASSPHRASE=your-very-secure-passphrase-here

# Optional: Additional keyfile for dual-factor encryption
# SKYLOCK_KEYFILE=/path/to/your/keyfile.key

# Key derivation parameters (Argon2id)
SKYLOCK_ARGON2_MEMORY=256  # MB (more = slower but more secure)
SKYLOCK_ARGON2_ITERATIONS=3
SKYLOCK_ARGON2_PARALLELISM=4

# =============================================================================
# HETZNER STORAGE BOX (WebDAV/SFTP) - Encrypted Transport
# =============================================================================

# Storage Box connection (all traffic over HTTPS/TLS 1.3)
HETZNER_SB_PROTOCOL=webdav  # webdav (default) or sftp
HETZNER_SB_HOST=uXXXXXX.your-storagebox.de
HETZNER_SB_PORT=443  # 443 for WebDAV, 23 for SFTP
HETZNER_SB_USER=uXXXXXX

# Storage Box password (stored in OS keyring or env)
# HETZNER_SB_PASSWORD=your-storage-box-password

# Remote path structure
HETZNER_SB_BASE_PATH=/backup/skylock

# =============================================================================
# LOCAL SECURITY SETTINGS
# =============================================================================

# Local data directory (encrypted at rest)
SKYLOCK_DATA_DIR=~/.skylock

# Temporary files (encrypted, auto-cleanup)
SKYLOCK_TEMP_DIR=/tmp/skylock

# Key rotation policy
SKYLOCK_KEY_ROTATION_DAYS=365
SKYLOCK_AUTO_KEY_ROTATION=true

# =============================================================================
# BACKUP SECURITY POLICIES
# =============================================================================

# Chunk encryption (AES-256-GCM with unique nonces)
SKYLOCK_CHUNK_SIZE=4194304  # 4MB chunks
SKYLOCK_COMPRESSION_LEVEL=7  # 0-9 (compress before encrypt)

# Verification settings
SKYLOCK_VERIFY_UPLOADS=true
SKYLOCK_INTEGRITY_CHECKS=true
SKYLOCK_CHECKSUM_ALGORITHM=BLAKE3

# =============================================================================
# LOGGING AND MONITORING (Privacy-Safe)
# =============================================================================

# Log level (ERROR, WARN, INFO, DEBUG)
SKYLOCK_LOG_LEVEL=INFO

# Log file (no sensitive data logged)
SKYLOCK_LOG_FILE=~/.skylock/skylock.log

# Disable telemetry (default: disabled)
SKYLOCK_TELEMETRY_ENABLED=false

# =============================================================================
# SECURITY HARDENING
# =============================================================================

# Memory protection (if supported)
SKYLOCK_MLOCK_ENABLED=true

# Secure temp cleanup
SKYLOCK_SECURE_DELETE=true

# Network timeouts (prevent hanging)
SKYLOCK_NETWORK_TIMEOUT=300
SKYLOCK_MAX_RETRIES=3

# Rate limiting (prevent abuse)
SKYLOCK_RATE_LIMIT_ENABLED=true